{
  "name": "@salesforce/acorn-visualforce",
  "version": "1.2.0",
  "description": "acorn extension for Salesforce js dialect with merge fields",
  "main": "dist/index.js",
  "author": "Salesforce",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forcedotcom/acorn-visualforce.git"
  },
  "engines": {
    "node": ">=0.4.0"
  },
  "license": "BSD-3-Clause",
  "keywords": [
    "salesforce",
    "visualforce",
    "vfel",
    "javascript",
    "acorn"
  ],
  "scripts": {
    "prepublish": "yarn run build && yarn run test",
    "build": "webpack",
    "test": "node tests/run-tests.js"
  },
  "peerDependencies": {
    "acorn": "^5.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "eslint": "^3.19.0",
    "eslint-config-recommended": "^1.5.0",
    "eslint-plugin-babel": "^4.1.0",
    "eslint-plugin-import": "^2.2.0",
    "tape": "^4.6.3",
    "webpack": "^2.4.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          },
          "debug": true
        }
      ]
    ],
    "plugins": [
      ["transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "recommended/esnext/style-guide",
    "allowInlineConfig": true,
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "sourceType": "module"
    }
  },
  "bugs": {
    "url": "https://github.com/forcedotcom/acorn-visualforce/issues"
  },
  "homepage": "https://github.com/forcedotcom/acorn-visualforce#readme",
  "directories": {
    "test": "tests"
  }
}
