{
    "name": "acorn-visualforce",
    "version": "1.0.0",
    "description": "acorn extension for Salesforce js dialect with merge fields",
    "main": "dist/index.js",
    "author": "Salesforce",
    "license": "BSD-3-Clause",
    "keywords": [
        "salesforce",
        "visualforce",
        "vfel"
    ],
    "scripts": {
        "build": "webpack",
        "test": "./node_modules/.bin/babel-node tests/run-tests.js"
